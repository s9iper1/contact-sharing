<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp"
    app:cardElevation="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/main_relayout_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/field_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:siBorderColor="#fff"
            app:siBorderWidth="1dp" />


        <LinearLayout
            android:id="@+id/total_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/field_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/field_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Action: Enter your name"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>